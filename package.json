{
  "name": "saucedemo-typescript-automation",
  "version": "1.0.0",
  "description": "Selenium WebDriver test automation framework for SauceDemo using TypeScript",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rimraf dist reports/screenshots reports/*.html",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "npm run build && mocha --require source-map-support/register 'dist/tests/**/*.test.js'",
    "test:login": "npm run build && mocha --require source-map-support/register 'dist/tests/login.test.js'",
    "test:products": "npm run build && mocha --require source-map-support/register 'dist/tests/products.test.js'",
    "test:cart": "npm run build && mocha --require source-map-support/register 'dist/tests/cart.test.js'",
    "test:chrome": "npm run build && BROWSER=chrome mocha --require source-map-support/register 'dist/tests/**/*.test.js'",
    "test:firefox": "npm run build && BROWSER=firefox mocha --require source-map-support/register 'dist/tests/**/*.test.js'",
    "test:headless": "npm run build && HEADLESS=true mocha --require source-map-support/register 'dist/tests/**/*.test.js'",
    "test:parallel": "npm run build && mocha --require source-map-support/register --parallel 'dist/tests/**/*.test.js'",
    "pretest": "npm run build"
  },
  "keywords": [],
  "author": "othaimeen",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "@types/selenium-webdriver": "^4.35.1",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "chai": "^4.4.1",
    "csv-parse": "^5.5.3",
    "mocha": "^10.2.0",
    "selenium-webdriver": "^4.16.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
